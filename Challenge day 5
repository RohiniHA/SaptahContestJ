#include<stdio.h>
void main()
{
    int num,ncr,n,r,row,space;
    printf("Enter a no. of rows from the keyboard");
    scanf("%d",&row);
    for(n=0;n<row;n++)
    {
         for(space=0;space<row;space++)
         {
              printf(" ");
         }
         for(r=0;r<=n;r++)
         {
             if(n==0||r==0)
             {
                 ncr=1;
                 printf("%d",ncr);
              }
              else
              {
                  ncr=ncr*(n-r+1)/r;
                  printf("%d",ncr);
               }
          }
    }      
              
}    
        
